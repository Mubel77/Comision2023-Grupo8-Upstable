<header>
    <a class="link_to_home_header" href="/">
        <img class="logo_header" src="/images/logo_upstables.jpg" alt="logo_upstables">
        <div class="titular">
            <h1 class="titulo">UPSTABLES</h1>
            <p class="subtitulo">Proteccion para tu tecnología, garantizada.</p>
        </div>
    </a>

    <div class="buscador_header">
        <form action="/search" method="get">
            <input type="text" name="buscador" placeholder="¿Qué estás buscando?">
            <div class="lupa_header">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </form>
    </div>

    <nav class="nav_header">
        <div class="burguer_header">
            <i class="fas fa-bars"></i>
            <ol class="menu-vertical">
                <li><a href="/products/UPS">UPS</a></li>
                <li><a href="/products/Estabilizadores">Estabilizadores</a></li>
                <li><a href="/products/Ofertas">Ofertas</a></li>
                <li><a class="dark_mode">Modo Oscuro 
                    <button class="switch" id="switch">
                    <span><i class="fa-solid fa-sun"></i></span>
                    <span><i class="fa-solid fa-moon"></i></span>
                    </button></i>
                </a></li>
            </ol>
        </div>

        <% if ( locals.usuario ){ %>
            <% if ( locals.usuario.roles.id !==1 ){%>
                <div class="icons_nav" id="img_user">
                    <a href="/users/perfilAdmin">
                        <img src="<%= locals.usuario.imagen %>" alt="foto de perfil">
                        <p class="texto_nav">¡ Hola !<br>
                            <%= locals.usuario.nombre %>
                        </p>
                    </a>
                </div>
                <% } else {%>
                    <div class="icons_nav" id="img_user">
                        <a href="/users/perfilUser">
                            <img src="<%= locals.usuario.imagen %>" alt="foto de perfil">
                            <p class="texto_nav">¡ Hola !<br>
                                <%= locals.usuario.nombre %>
                            </p>
                        </a>
                    </div>

                    <div class="icons_nav" id="cartIcon">
                        <a href="/products/productCart">
                            <p class="texto_nav">Carrito</p>
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p id="cartItemCount">0</p> 
                        </a>
                    </div>
                    <% } %>


                        <% }else{ %>
                            <div class="icons_nav">
                                <a href="/users/register">
                                    <p class="texto_nav">Creá tu cuenta</p>
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                            </div>

                            <div class="icons_nav">
                                <a href="/users/login">
                                    <p class="texto_nav">Ingresar</p>
                                    <i class="fa-solid fa-user"></i>
                                </a>
                            </div>
                        <% } %>
    </nav>

    <div class="on-off">
        <!-- <i class="fa-solid fa-toggle-on"></i> -->
    <button class="switch_2" id="switch">
    <span><i class="fa-solid fa-sun"></i></span>
    <span><i class="fa-solid fa-moon"></i></span>
    </button>
    </div>

</header>

<nav class="nav_header_2">
    
    <div class="div_nav_header_2">
        <h4><a href="/products/UPS">UPS</a></h4>

    </div>
    
    <div class="linea"></div>
    
    <div class="div_nav_header_2">
        <h4 class="estab_nav"><a href="/products/Estabilizadores">ESTABILIZADORES</a></h4>

    </div>
    
    <div class="linea"></div>

    <div class="div_nav_header_2">
        <h4><a href="/products/Ofertas">OFERTAS</a></h4>
    </div>
</nav>

<script src="/javascripts/dark-mode.js"></script>