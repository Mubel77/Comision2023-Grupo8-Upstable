<%-include("../partials/head.ejs") %>

<body>
    <%-include("../partials/header.ejs") %>
    <main class="main_newCart">
      <% if (productos != undefined) { %>
        
      <section class="column_items_products" >
        <%  productos.forEach(elemento => { %>    
            <article class="item_product">
              <div class="item_product_div div_image">
                <% for(x=0; x<elemento.Producto.imagenes.length; x=elemento.Producto.imagenes.length) { %>
                    <img src="<%= elemento.Producto.imagenes[0].ubicacion%>/<%= elemento.Producto.imagenes[0].nombre %>" alt="Imagen Publicidad">
                <% } %>
              </div>
                <div class="item_product_div  div_description">
                  <span class=""><%= elemento.Producto.descripcion %></span>
                </div>
                <div class="item_product_div  div_price">
                  <p class="">$<%= elemento.Producto.precio %></p>
                </div> 
                <div class="item_product_div  div_price">
                  <p>x <%= elemento.cantidad %> unid</p>
                </div>   
            </article>
        <% }) %>
              <div class="clean_cart">
                    <a href="/products/productCart">
                      <form action="/products/productCart/<%=locals.usuario.id%>?_method=DELETE" method="POST">
                        <button class="boton_verificar">Limpiar Carrito</button>
                    </form>
                </a>
              </div>
      </section>
        
      <section class="column_detail_facturacion">
        <div  class="list_detail_facturacion">
          <div class="div_detail_facturacion">
            <p class="title_detail" style="font-size: 16px;"> Subtotal </p>
            <p class="detail" style="font-size: 16px;">$<%= data.subtotal %></p>
          </div>
          <div class="div_detail_facturacion">
            <p class="title_detail" style="font-size: 16px;">Impuestos (IVA)</p>
            <p class="detail" style="font-size: 16px;">$<%= data.impuestos %></p>  
          </div>
          <div class="div_detail_facturacion">
            <p class="title_detail">Transporte</p>
            <p class="detail">Envio gratis</p>
          </div>
          <div class="div_detail_facturacion">
            <p class="title_detail">TOTAL</p>
            <p class="detail">$<%= data.total %></p>
          </div>
          <div class="boton_cart_compra">
            <button>Finalizar compra </button>
          </div>
        </div>   
      </section>
      <script src="/javascripts/carritoStoraje.js"></script>

      <%} else {%>
        <div class="box_empty">
          <div class="box_message_empty">
            <p>Ups... Carrito vacio..!!!</p>
            <iframe src="https://giphy.com/embed/8a3ZZecD9WdChojEhV" width="60%" height="60%"  frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
