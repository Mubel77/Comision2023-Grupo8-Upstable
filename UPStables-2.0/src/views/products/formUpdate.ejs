<%- include('../partials/head')%>

<body>
    <%- include('../partials/header.ejs')%>
    <main>
        <div style="width: 200px;">
            <a href="/products/dashboard"><button class="dashboard_add">Dashboard</button></a>
        </div>
        <form action="/products/update/<%=producto.id%>?_method=PUT" method="POST" class="form_create"
            enctype="multipart/form-data">
            <div class="div_config div_form_product">
                <label for="modelo" id="modelo" class="div_config_label">Modelo</label>
                <input type="text" name="modelo" value="<%= producto.modelo %>">
            </div>
            <!-- Otros campos del formulario -->
            <% if (imagenActual && imagenActual.nombre) { %>
            <div class="div_config">
                <label for="imagenActual" id="imagenActual">Imagen Actual</label>
                <img src="/images/products/<%= imagenActual.nombre %>" alt="Imagen actual del producto" width="200"
                    class="imagen_product">
            </div>
            <% } %>
            <div class="div_config">
                <label for="nuevaImagen" id="nuevaImagen">Nueva Imagen</label>
                <input type="file" name="nuevaImagen">
            </div>

            <div class="boton_registro_update">
                <button type="submit">Editar Producto</button>
            </div>
        </form>

        <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST">
            <button type="submit">Eliminar</button>
        </form>
    </main>

    <%- include('../partials/footer') %>
</body>

</html>
