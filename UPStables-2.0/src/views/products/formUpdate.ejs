        <form method="POST" action="products/formUpdate" id="" class="form_create">
            <% for (let x = 0; x < formRegistro.length; x++) { %>
                
                    <label class="label-create" for="<%= formRegistro[x].toLowerCase() %>"><%= formRegistro[x] %></label>
                    <% switch (formRegistro[x]) { 
                        case "descripcion": %>
                            <textarea class="textarea-create" name="<%= formRegistro[x].toLowerCase() %>" id="<%= formRegistro[x].toLowerCase() %>" cols="30" rows="10" placeholder=" Ingrese el detalle del producto"></textarea>
                            <% break;
                        case "imagen": %>
                            <input class="image-create" type="file" name="<%= formRegistro[x].toLowerCase() %>" id="<%= formRegistro[x].toLowerCase() %>" accept="image/*" >
                            <% break;
                        case "id": %>
                            <input class="id-create" type="number" name="<%= formRegistro[x].toLowerCase() %>" placeholder="<%= formRegistro[x] %>">
                            <% break;
                        default: %>
                            <input class="text-create" type="text" name="<%= formRegistro[x].toLowerCase() %>" placeholder="<%= formRegistro[x] %>">
                    <% } %>
            <% } %>       
        </form>
        <div class="boton_registro_update ">
                    <a href="/products/dashboard">
                            <button type="submit">Editar Producto</button>
                    </a>
                    <a href="/dashboard">
                            <button type="submit">Eliminar </button>
                    </a>   
        </div>  
        
    </main>
