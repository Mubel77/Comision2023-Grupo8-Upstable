<%- include('../partials/head')%>
    
<body>
        <%- include('../partials/header.ejs')%>    
    
        <main class="main_login">
            <div class="mensaje_bienvenida">
            <span class="login_titulo_p">¡Bienvenido!</span>
            <span class="login_subtitulo_p">Ingresá, te estamos esperando...</span>
            </div>
            
            <form action="/users/login" method="post" id="form_login">
                <div class="div_config">
                    <label for="email">Email</label>
                    <input type="email"  name="email" placeholder="Email" required>
                </div>
                <div class="div_config">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" placeholder="Contraseña" required>
                </div>
                <a href="/users/register" id="login_password">
                    <span>¿No tenés cuenta? <br> Crea tu cuenta</span>
                </a>
                <div class="boton_login">
                    <button type="submit">Ingresar</button>
                </div> 
            </form>
        </main>
    
        <%- include('../partials/footer') %>
    
</body>
</html>