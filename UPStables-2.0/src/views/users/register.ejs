<%- include('../partials/head')%>
    
<body>
        <%- include('../partials/header.ejs')%>    
    
    <main class="main_registro">
        <img src="/images/img_formulario_registro.png" alt="fomulario de registro" id="imagenFormulario">
        <div class="subtitulo_registrate">
            <p id="p_registro"><%= subtitulo %></p>
        </div>    
        <form method="POST" action="/users/register" id="form_registro" enctype="multipart/form-data">
            <div class="div_config nombre">
                <label for="nombre">Nombre</label>
                <input id="nombre" type="text"  name="nombre" placeholder="Nombre" >
                <p><%= locals.errors && errors.nombre ? errors.nombre.msg : null %> </p>
            </div>
            <div class="div_config nombre">
                <label for="apellido">Apellido</label>
                <input id="apellido" type="text"  name="apellido" placeholder="Apellido"  value="<%= locals.oldData ? oldData.apellido : null %>">
                <p><%= locals.errors && errors.apellido ? errors.apellido.msg : null %> </p>
            </div>
            <div class="div_config nombre">
                <label for="domicilio">Domicilio CALLE</label>
                <input id="domicilio_calle" type="text"  name="nombre_calle" placeholder="Nombre de calle" value="<%= locals.oldData ? oldData.nombre_calle : null %>">
                <p><%= locals.errors && errors.nombre_calle ? errors.nombre_calle.msg : null %> </p>
            </div>
            <div class="div_config nombre">
                <label for="domicilio">Domicilio NUMERO</label>
                <input id="domicilio_num" type="text"  name="numero_calle" placeholder="Altura" value="<%= locals.oldData ? oldData.numero_calle : null %>">
                <p><%= locals.errors && errors.numero_calle ? errors.numero_calle.msg : null %> </p>
            </div>
            <div class="div_config nombre">
                <label for="fecha_nacimiento">Fecha Nacimiento</label>
                <input id="fecha_nacimiento" type="date"  name="fecha_nacimiento" placeholder="Fecha de nacimiento"  value="<%= locals.oldData ? oldData.fecha_nacimiento : null %>">
                <p><%= locals.errors && errors.fecha_nacimiento ? errors.fecha_nacimiento.msg : null %> </p>
            </div>
            <div class="div_config nombre">
                <label for="imagen" class="col-12 mt-3">Foto de perfil</label>
                <input id="imagen" type="file" class="form-control" id="inputGroupFile02" name="imagen" placeholder="Imagen">
                <p><%= locals.errors && errors.imagen ? errors.imagen.msg : null %> </p>
            </div>
            <div class="div_config">
                <label for="email">Email</label>
                <input id="email" type="email"  name="email" placeholder="Email" value="<%= locals.oldData ? oldData.email : null %>">
                <p><%= locals.errors && errors.email ? errors.email.msg : null %> </p>
            </div>
            <div class="div_config">
                <label for="password">Contrase単a</label>
                <input id="password" type="password" id="password" name="password" placeholder="Contrase単a" value="<%= locals.oldData ? oldData.password : null %>">
                <p> <%= locals.errors && errors.password ? errors.password.msg : null %> </p>
            </div> 
            <div class="div_config">
              <label for="password">Confirmar contrase単a</label>
              <input id="confirm_pass" type="password" name="passwordConfirmation" placeholder="Confirmar contrase単a" value="<%= locals.oldData ? oldData.passwordConfirmation : null %>">
              <p><%= locals.errors && errors.password ? errors.password.msg : null %> </p>
          </div>
            <div class="boton_registro">
                <button type="submit">Crear cuenta</button>
            </div>           
        </form>
    </main>
    <script src="/javascripts/validations-register.js"></script>
    <%- include('../partials/footer') %>
    
</body>
</html>