                <label for="password">Confirmar contrase単a</label>
                <input type="password" name="password" placeholder="Confirmar contrase単a" value="<%= locals.oldData ? oldData.nombre : null %>">
                <% if (locals.errors && errors.apellido) { %>
                    <p class="feedback">
                      <%= errors.apellido.msg %>
                    </p>
                    <% } %>
            </div>
            <div class="boton_registro">
                <button type="submit">Crear cuenta</button>
            </div>           
        </form>
    </main>
    
    <%- include('../partials/footer') %>
    
</body>
</html>