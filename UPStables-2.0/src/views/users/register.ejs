<%- include('../partials/head')%>
    
<body>
        <%- include('../partials/header.ejs')%>    
    
    <main class="main_registro">
        <img src="/images/img_formulario_registro.png" alt="fomulario de registro" id="imagenFormulario">
        <div class="subtitulo_registrate">
            <p id="p_registro"><%= subtitulo %></p>
        </div>    
        <form method="POST" action="/users/register" id="form_registro">
                <%  for(x=0; x < formRegistro.length; x++) {%>
                    <% if (x<2){%>
            <div class="div_config nombre">
                <label for="<%- formRegistro[x].toLowerCase()%>"><%= etiqueta(formRegistro[x])%></label>
                <input type="<%- tipo(formRegistro[x])%>" name="<%- formRegistro[x].toLowerCase()%>" placeholder="<%= etiqueta(formRegistro[x])%>" required>
            </div>
                    <% } else {%>
            <div class="div_config">
                <label for="<%- formRegistro[x].toLowerCase()%>"><%= etiqueta(formRegistro[x]) %></label>
                <input type="<%- tipo(formRegistro[x]) %>"  name="<%- formRegistro[x].toLowerCase()%>" placeholder="<%= etiqueta(formRegistro[x]) %>" required>
            </div>
                    <% }%>
                <% }%>
            <div class="boton_registro">
                <button type="submit">Crear cuenta</button>
            </div>           
        </form>
    </main>
    
    <%- include('../partials/footer') %>
    
</body>
</html>